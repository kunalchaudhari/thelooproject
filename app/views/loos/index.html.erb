
<div class="container">
  <div class="row">
    <div class="col-md-12">
      <p id="notice"><%= notice %></p>

      <h1>Listing Loos</h1>
      <table class="table table-bordered table-striped table-condensed">
        <thead>
          <tr>
            <th>Lat</th>
            <th>Lng</th>
            <th>Name</th>
            <th>Description</th>
            <th>Open hours</th>
            <th>Closing hours</th>
            <th>Open closing note</th>
            <th>Managed by</th>
            <th>Type</th>
            <th>Genders</th>
            <th>No of toilets</th>
            <th>No of bathrooms</th>
            <th>No of urinals</th>
            <th>Paid</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @loos.each do |loo| %>
            <tr>
              <td><%= loo.lat %></td>
              <td><%= loo.lng %></td>
              <td><%= loo.name %></td>
              <td><%= loo.description %></td>
              <td><%= loo.open_hours %></td>
              <td><%= loo.closing_hours %></td>
              <td><%= loo.open_closing_note %></td>
              <td><%= loo.managed_by %></td>
              <td><%= loo.type %></td>
              <td><%= loo.genders %></td>
              <td><%= loo.no_of_toilets %></td>
              <td><%= loo.no_of_bathrooms %></td>
              <td><%= loo.no_of_urinals %></td>
              <td><%= loo.paid %></td>
              <td><%= link_to 'Show', loo %></td>
              <td><%= link_to 'Edit', edit_loo_path(loo) %></td>
              <td><%= link_to 'Destroy', loo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New Loo', new_loo_path %>
      
    </div>
  </div>
</div>

