<div class="container">
  <div class="row">
    <div class="col-md-10 center-block" style="float: none;">
      
      <% if params[:q] %>
        <div class="well">
          <br />
          <%= render 'shared/search_form' %>
        </div>
      <% end %>

      <% unless @loos.empty? %>

      <% if params[:q] %>
        <h3>Search result (<%= @loos.size %>)</h3>
      <% else %>
        <h1>Listing Loos(<%= @loos.size %>)</h1>
      <% end %>
      
        <% @loos.each do |loo| %>      
        <hr />
        <div class="row">
          <div class="col-md-4">
            <a href="<%= loo_path(loo) %>">
              <%= image_tag loo.photo.url(:medium), class: "img-thumbnail" %>
            </a>
            <hr />
            <%= render :partial => 'loos/actions', locals: { loo: loo } %>
          </div>
          <div class="col-md-7">
            <h3 class="media-heading"><%= link_to loo.name, loo_path(loo) %></h3>
            <p><%= loo.location_name %></p>
            <%= render :partial => 'loos/summary', locals: { loo: loo } %>
          </div>
        </div>
        <% end %>
      <% else %>
        <div class="alert alert-warning">
          <strong>No loos found.</strong>
        </div>
      <% end %>

    </div>
  </div>
</div>

