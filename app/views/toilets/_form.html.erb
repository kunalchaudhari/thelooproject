<%= simple_form_for(@toilet) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :lat%>
    <%= f.input :lng %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :open_hours %>
    <%= f.input :closing_hours %>
    <%= f.input :open_closing_note %>
    <%= f.input :managed_by %>
    <%= f.input :type %>
    <%= f.input :genders %>
    <%= f.input :no_of_toilets %>
    <%= f.input :no_of_bathrooms %>
    <%= f.input :no_of_urinals %>
    <%= f.input :paid %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
